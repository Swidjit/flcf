!!! 5
%html{ :lang => "en"}
  %head{:prefix => "og: http://ogp.me/ns#"}
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title Finger Lake Climate Fund

    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = javascript_include_tag "http://maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=places,geometry"
    = favicon_link_tag "favicon.ico"
    = csrf_meta_tag
    =yield :head

  %body
    .off-canvas-wrap{"data-offcanvas" => ""}
      .inner-wrap
        =render :partial => 'layouts/head'


        %section.main-section
          .row{:style => "background-color: #fff;padding:0px;"}
            .large-3.small-12.medium-4.columns

              #facebook
                .fb-like-box{"data-colorscheme" => "light", "data-header" => "true", "data-href" => "https://www.facebook.com/climatefund", "data-show-border" => "false", "data-show-faces" => "false", "data-stream" => "true", "data-width" => "230"}


            .large-9.small-12.medium-8.columns{:style=>"padding-top: 8px;"}
              #content
                =yield
        =render :partial => 'layouts/footer'

