!!! 5
%html{ :lang => "en"}
  %head{:prefix => "og: http://ogp.me/ns#"}
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title Finger Lake Climate Fund

    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = javascript_include_tag "http://maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=places,geometry"
    = favicon_link_tag "favicon.ico"
    = csrf_meta_tag
    =yield :head

  %body
    .off-canvas-wrap{"data-offcanvas" => ""}
      .inner-wrap
        =render :partial => 'layouts/head'


        %section.main-section
          .row{:style => "background-color: #fff"}
            .large-3.small-12.medium-4.columns{:style => "background-color: #A4D8EE;text-align:center; padding: 10px"}
              %h5 Offset your carbon use
              =image_tag 'calculator.png', :style => "margin-bottom: 15px"
              %br
              %button#try-calc try the calculator
            .large-9.small-12.medium-5.columns
              .panel

                #content
                  =yield
        =render :partial => 'layouts/footer'

