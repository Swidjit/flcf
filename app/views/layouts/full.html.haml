!!! 5
%html{ :lang => "en"}
  %head{:prefix => "og: http://ogp.me/ns#"}
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title Finger Lake Climate Fund

    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = javascript_include_tag "http://maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=places,geometry"
    = favicon_link_tag "favicon.ico"
    = csrf_meta_tag
    =yield :head

  %body
    .off-canvas-wrap{"data-offcanvas" => ""}
      .inner-wrap
        =render :partial => 'layouts/head'


        %section.main-section
          .row
            .large-4.small-12.medium-5.columns
              .panel
                #recent-offsets
                  %h4 Recent Offsets
                  =render :partial=>'offsets/recent', :collection=>@recent_offsets, :as => :offset
            .large-8.small-12.medium-7.columns
              #content
                = yield :main_section
                =yield
        =render :partial => 'layouts/footer'

:javascript
  $(document).on("ready", function() {

    $('.about-page').on("click", function() {
      $("#content").html("#{escape_javascript render :partial => 'pages/about'}");
    });
    $('.faq-page').on("click", function() {
      $("#content").html("#{escape_javascript render :partial => 'pages/faq'}");
    });
    $('.resources-page').on("click", function() {
      $("#content").html("#{escape_javascript render :partial => 'pages/resources'}");
    });
    $('.portfolio-page').on("click", function() {
      $("#content").html("#{escape_javascript render :partial => 'pages/portfolio'}");
    });
  });
