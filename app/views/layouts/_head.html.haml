.off-canvas-wrap
  .inner-wrap
    %nav.tab-bar.hide-for-medium-up
      %section.left-small
        %a.left-off-canvas-toggle.menu-icon
          %span
      %section.middle.tab-bar-section
        %h2.title
          %a{:href => "/"} Finger Lakes Climate Fund
    %aside.left-off-canvas-menu
      %ul.off-canvas-list
        %li=link_to "About", pages_path("about")
        %li.has-dropdown
          %a{:href => "/blog"} Blog
          %ul.dropdown
            %li
              %a{:href => "/blog/zurb-foundation"} ZURB Foundation
            %li
              %a{:href => "/blog/middleman"} Ruby Middleman
            %li
              %a{:href => "/blog/review"} Reviews
            %li
              %a{:href => "/blog/studio"} Studio
        %li
          %a{:href => "/about"} About
        %li
          %a.button{:href => "/updates"} Updates
    %section.main-section
      / add topbar, hide for small
      .sticky{"data-options" => "sticky_on: large"}
        %nav.top-bar.hide-for-small{"data-topbar" => ""}
          %ul.title-area
            %li.name
              %h1
                %a{:href => "/"} Finger Lakes Climate Fund
            %li.toggle-topbar.menu-icon
              %a{:href => "#"} Menu
          %section.top-bar-section
            %ul.right
              %li=link_to "About", pages_path("about")
              %li=link_to "Project Portfolio", pages_path("about")
              %li=link_to "FAQ", pages_path("about")
              %li=link_to "Resources", pages_path("about")

